{
	"$jsonSchema": {
		"required": ["uniprot_id", "ec_number", "abundances",
		"protein_name", "gene_name"],
		"properties":{
			"uniprot_id": {
				"bsonType": "string",
				"description": "must be string and is required"
			},
			"ec_number": {
				"bsonType": "string",
				"description": "must be string and is required"
			},
			"protein_name": {
				"bsonType": "string",
				"description": "must be string and is required"
			},
			"abundances": {
				"bsonType": "object",
				"required": ["organ", "ncbi_taxonomy_id",
					"species_name", "abundance"],
				"properties": {
					"organ": { "bsonType": "string" },
					"ncbi_taxonomy_id": { "bsonType": "int" },
					"species_name": { "bsonType": "string" },
					"abundance": { "bsonType": "int" }
					}
				},
			"gene_name": {"bsonType": "string"}
		}			
	}
}
