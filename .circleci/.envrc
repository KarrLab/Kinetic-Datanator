sudo chmod 777 /etc/hosts

if grep -Frq 'mongo-datanator-1' /etc/hosts
then
    echo 'Host name for mongo-datanator-1 already exists'
else
    echo '127.0.0.1  mongo-datanator-1' >> /etc/hosts
    echo 'Hostname: mongo-datanator-1 set'
fi

